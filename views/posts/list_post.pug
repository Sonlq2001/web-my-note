extends ../index
block main
	div(class="container mt-5")
		div(class='row')
			h4 danh sách bài viết	
			form(action="/posts/search", method="GET")
				input(type="text", placeholder="search...", name="q" value=valueSearch)
				button search

			a(href="/posts/add") add bài viết
			
			each post in posts
				div(class="col col-lg-4")
					p #{`${post.title} : ${post.content}`}
					a(href=`/posts/view/${post.id}`) view
					hr

